# Exit8 Environment Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Project
PROJECT_NAME={{ project_name }}
ENVIRONMENT={{ environment }}

# Database (Cloud SQL via Private IP)
DATABASE_URL=jdbc:postgresql://{{ db_host }}:{{ db_port }}/{{ db_name }}
DATABASE_HOST={{ db_host }}
DATABASE_PORT={{ db_port }}
DATABASE_NAME={{ db_name }}
DATABASE_USER={{ db_user }}
DATABASE_PASSWORD={{ db_password }}

# Redis (Memorystore)
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port }}
REDIS_URL=redis://{{ redis_host }}:{{ redis_port }}

# Java Options
JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC

# Spring Profiles
SPRING_PROFILES_ACTIVE=gcp,{{ environment }}

# Cache Configuration (2-Tier: Caffeine + Redis)
CACHE_TYPE=caffeine_redis
CAFFEINE_MAX_SIZE=1000
CAFFEINE_EXPIRE_AFTER_WRITE=300s

# Monitoring
PROMETHEUS_ENABLED=true
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,prometheus,metrics

# Security
JWT_SECRET={{ lookup('password', '/dev/null length=64 chars=ascii_letters,digits') }}

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_EXIT8=DEBUG
LOG_FORMAT=json
